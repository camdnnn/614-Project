@startuml BrowsingFlightActivityDiagram
title Browsing/Selecting a Flight Process

|User|
start
:Access Flight Search;
:Enter Search Criteria;
:(Origin, Destination, Date, Airline);
:Click "Search";

|System|
:Validate Search Criteria;
if (Criteria Valid?) then (no)
  |User|
  :Display Error Message;
  :Modify Search Criteria;
  stop
else (yes)
  |System|
  :Query Available Flights;
  :Filter Results;
  :(Match Origin, Destination, Date, Airline);
  if (Flights Found?) then (no)
    |User|
    :Display "No Flights Found";
    :Modify Search Criteria;
    stop
  else (yes)
    :Sort Results;
    :(By Price, Departure Time, etc.);
    |User|
    :View Flight Search Results;
    :(Flight Number, Airline, Time, Price, Available Seats);
    :Review Results;
    repeat
      if (Select Flight?) then (yes)
        :Click on Flight;
        |System|
        :Retrieve Flight Details;
        :(Aircraft Type, Gates, Stops, etc.);
        |User|
        :View Flight Details;
        :(Full Schedule, Seat Map, Amenities, Price Breakdown);
        if (Proceed to Booking?) then (yes)
          stop
        else (no)
          :Return to Results;
        endif
      else
        :Modify Search;
      endif
    repeat while (Continue Browsing?) is (yes)
    |User|
    :Exit Search;
    stop
  endif
endif

@enduml